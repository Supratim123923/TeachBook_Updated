@{
}

@model List<TeachBook.Web.Models.Domain_Model.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>Show All Blogs</h3>
    </div>

</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>

                    <th>
                        Id
                    </th>
                    <th>
                       Heading
                    </th>
                    <th>
                        Tags
                    </th>
                    <th>
                        
                    </th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>

                        <td>
                            @blog.Id
                        </td>
                        <td>
                            @blog.Heading
                        </td>
                        <td>
                            <div class="d-flex">
                                @foreach(var tag in blog.Tags)
                                {
                                    <span class="badge bg-dark me-1">@tag.DisplayName</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPost" asp-action="EditBlog" asp-route-id="@blog.Id">Edit</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Blogs Found</p>
    }
</div>
