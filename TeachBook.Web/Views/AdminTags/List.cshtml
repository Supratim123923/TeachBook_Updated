@model List<TeachBook.Web.Models.Domain_Model.Tag>
@{

}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>Show All Tags</h3>
    </div>

</div>

<div class="container py-5">
    @if(Model!=null && Model.Any() ){
    <table class="table">
        <thead>
            <tr>
               
                <th>
                    Name
                </th>
                <th>
                    Display Name
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    
                    <td>
                        @tag.Name
                    </td>
                    <td>
                        @tag.DisplayName
                    </td>
                    <td>
                        <a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    }
    else{
    <p>No Tags Found</p>
    }
</div>

