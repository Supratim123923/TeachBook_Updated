@{
}
@model TeachBook.Web.Models.ViewModels.EditTag
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>Edit Tags</h3>
    </div>

</div>

<div class="container py-5">
   
        <form method="post">
        <div class="mb-3">
            <label class="form-label">
                Id
            </label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
        </div>
            <div class="mb-3">
                <label class="form-label">
                    Name
                </label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">
                    Display Name
                </label>
                <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" />
            </div>
            <div class="mb-3">
                <div class="d-flex">
                <button type="submit" class="btn-close-white">Update</button>
                <button class="btn-danger" type="submit" asp-area="" asp-controller="AdminTags" asp-action="DeleteTag">Delete</button>
                </div>
                
            </div>
        </form>
  
</div>